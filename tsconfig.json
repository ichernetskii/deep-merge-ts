{
  "compilerOptions": {
    // generation
    "target": "ES2016",
    "module": "ES6",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "types": ["node", "jest"],
    // checks
    "strict": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false
  },
  "include": ["./**/*.ts"]
}
